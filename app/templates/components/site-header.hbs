<header>
  <div class="container">
    <div class="headerPanel">
      <div class="logoWrap">
        {{#link-to 'account.index' class="logo"}}
          <img src="/images/logo.svg" alt="">
        {{/link-to}}
      </div>
      <div class="headerMenu headerMenu_js{{if bShowSideMenu " mobile_active"}}">
        <div class="mobileMenuBtn mobileMenuBtn_js" onclick={{action "showSideMenu"}}><i class="fa fa-bars"
                                                                                         aria-hidden="true"></i></div>
        <div class="menuPanel menuPanel_js hideSideMenu_action"></div>
        <nav class="nav headerNav headerMenu__nav" style="flex-wrap: nowrap; overflow: scroll;">
          <span class="closeMenu"><span class="icon-cross closeMenu__btn closeMenu__btn_js hideSideMenu_action"></span></span>
          {{#link-to "account.index" class="nav-link menuItem"}}Объекты{{/link-to}}
          {{#link-to 'account.settings.devices' class='nav-link menuItem'}}
            Настройки
          {{/link-to}}

          <nav class="nav footerNav footerMenuInHeader" style="flex-wrap: nowrap">
            {{#link-to 'redirect' (query-params to="landing") class="nav-link menuItem"}}О компании{{/link-to}}
            {{#link-to 'redirect' (query-params to="contacts") class="nav-link menuItem"}}Контакты{{/link-to}}
            {{#link-to 'redirect' (query-params to="forInvestors") class="nav-link menuItem"}}Инвесторам{{/link-to}}
          </nav>
        </nav>
      </div>
      <div class="userInfo">
        {{#link-to 'account.index'}}
          <span class="userInfo__name">
            <i class="fa fa-user-o" aria-hidden="true"></i>
            {{user.fullName}}
          </span>
        {{/link-to}}
      </div>
      <div style="order: 2; margin-left: auto; margin-right: 15px;">
        {{core/icon-component name="sign-out" class="sign-out-icon clickable pull-right"
                              click=(action "onLogOutAction")
        }}
      </div>
    </div>
  </div>
</header>
