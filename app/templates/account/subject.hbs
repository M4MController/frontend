<div class="container">
  <div class="row align-items-center">
    {{#page-caption text=model.name icon="home" class="col-12"}}
      <div class="pull-right">
        {{#unless model.sensors.length}}
          <button class="btn btnStyle btnStyle_сolorgray margin-right-1x"
                  onclick={{action "onDeleteObjectAction" model}}>
            <span class="icon-cross"></span> Удалить
          </button>
        {{/unless}}
        <button class="btn btnStyle btnStyle_сolor" {{action "showAddController"}}>
          Добавить контроллер
        </button>
      </div>
    {{/page-caption}}
  </div>

  {{#if bShowAddController}}
    {{modals/add-controller
      loading=bLoadingAddController
      onAdd=(action "onAddControllerAction")
      onClose=(action "hideAddController")
    }}
  {{/if}}

  {{#if bShowSensorsAddition}}
    {{modals/sensor-add
      sensors=sensorsForAddition
      loading=bLoadingSensorsAddition
      onAdd=(action "onAddSensorsAction")
      onClose=(action "setProp" "bShowSensorsAddition" false)}}
  {{/if}}

  <div class="row havings">
    {{#each model.sensors as |sensor|}}
      {{sensor-card sensor=sensor}}
    {{/each}}
  </div>
</div>
