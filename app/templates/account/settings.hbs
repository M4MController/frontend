<div class="container">
  <div class="row align-items-center page__title">
    <div class="col-md-12">
      <h2>
        <span class="icon-settings"></span>
        <span>Настройки</span>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="cardStyle cardStyle_noPaddings">
        <div class="tabsWrap">
          <div class="tabs">
            <div class="tabs_block">
              <ul class="tabs">
                {{#link-to "account.settings.devices-settings" tagName="li" class="tabs__item"}}
                  Мои устройства
                {{/link-to}}
                {{#link-to "account.settings.account-settings" tagName="li" class="tabs__item"}}
                  Мой профиль
                {{/link-to}}
                {{#link-to "account.settings.payment-settings" tagName="li" class="tabs__item"}}
                  Платёжные карты
                {{/link-to}}
              </ul>

              <div class="box" style="display: block">
                {{outlet}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
